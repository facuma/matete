// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  category    String
  promotionalPrice Float?
  imageUrl    String?
  description String   @db.Text
  featured    Boolean  @default(false)
  rating      Float    @default(5.0)
  slug        String?  @unique
  metaTitle   String?
  metaDescription String?
  material    String?
  brand       String?
  manufacturer String?
  stock       Int      @default(0)
  reservedStock Int    @default(0)
  lowStockThreshold Int @default(5)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  options     ProductOption[]
  linkedInValues ProductOptionValue[] @relation("LinkedProduct")
  reservations StockReservation[]

  @@map("products")
}

model ProductOption {
  id        Int                  @id @default(autoincrement())
  name      String               // e.g., "Bombilla", "Caja de Regalo"
  productId Int
  product   Product              @relation(fields: [productId], references: [id], onDelete: Cascade)
  values    ProductOptionValue[]

  @@map("product_options")
}

model ProductOptionValue {
  id              Int           @id @default(autoincrement())
  name            String        // e.g., "No", "Pico de Loro"
  priceModifier   Float         @default(0)
  linkedProductId Int?          // Optional link to another product
  optionId        Int
  option          ProductOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  linkedProduct   Product?      @relation("LinkedProduct", fields: [linkedProductId], references: [id])

  @@map("product_option_values")
}

model Order {
  discountCode   String?   // applied discount code
  id              String   @id @default(uuid())
  customerName    String
  customerEmail   String?
  customerAddress String
  customerCity    String
  items           Json
  total           Float
  paymentMethod   String   @default("card")
  paymentDetails  Json?
  status          String   @default("Procesando")
  shippingMethod  String?
  shippingCost    Float    @default(0)
  mercadopagoPaymentId String?
  mpPaymentStatus String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  userId          String?
  user            User?    @relation("UserOrders", fields: [userId], references: [id])

  @@map("orders")
}

model Activity {
  id          String   @id @default(uuid())
  type        String
  description String
  metadata    Json?
  createdAt   DateTime @default(now())

  @@map("activities")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  role          String    @default("customer")
  dni           String?
  phone         String?
  address       String?
  city          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  sessions      Session[]
  orders        Order[]   @relation("UserOrders")
  posts         Post[]
  
  emailVerified DateTime?
  verificationCode String?
  verificationCodeExpires DateTime?

  @@map("users")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model HomePageContent {
  id             Int      @id @default(1)
  heroTitle      String   @default("MATETÉ")
  heroSubtitle   String   @default("El ritual de cada día")
  heroButtonText String   @default("Ver Colección")
  heroImage      String?  // URL to image
  
  aboutTitle     String   @default("Sobre Nosotros")
  aboutText      String   @default("Nacimos en Resistencia, Chaco, con la misión de revalorizar el ritual del mate.")
  aboutImage1    String?
  aboutImage2    String?

  updatedAt      DateTime @updatedAt

  @@map("home_page_content")
}

model DiscountCode {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  percentage  Float    // e.g., 20 for 20% discount
  usageLimit  Int      // maximum number of uses
  usedCount   Int      @default(0)
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("discount_codes")
}

model Post {
  id          String       @id @default(cuid())
  title       String
  slug        String       @unique
  excerpt     String
  content     String?      @db.Text     // HTML string from React Quill
  coverImage  String?
  published   Boolean      @default(false)
  publishedAt DateTime?
  author      User         @relation(fields: [authorId], references: [id])
  authorId    String
  seo         SeoMetadata?

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("posts")
}

model SeoMetadata {
  id              String  @id @default(cuid())
  metaTitle       String?
  metaDescription String?
  keywords        String? // Separados por comas
  postId          String  @unique
  post            Post    @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("seo_metadata")
}

model SiteSettings {
  id              Int     @id @default(1)
  facebookPixelId String?
  
  updatedAt       DateTime @updatedAt

  @@map("site_settings")
}

model StockReservation {
  id         String   @id @default(uuid())
  productId  Int
  quantity   Int
  sessionId  String?
  cookieId   String?
  expiresAt  DateTime
  status     String   @default("active") // active, released, completed
  createdAt  DateTime @default(now())
  
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@map("stock_reservations")
}

model ShippingOption {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  deliveryDays String
  enabled     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("shipping_options")
}
